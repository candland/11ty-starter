<article class="">
  <h1 class="text-center">{{ site.description }}</h1>
  <p class="text-lg text-center">
		A basic starter site with 11ty, ParcelJS, StimulusJS, and TailwindCSS.
  </p>
  <div>
    <ul>
    {% for post in (collections.post | head(-3) ) %}
      <li>
        <a href="{{post.url}}">
          {{ post.data.title }}
        </a>
        | {{ (post.data.tags or []) | join(', ') }}
        | {{ post.date.toDateString() }}
      </li>
    {% endfor %}
    </ul>
		<a href="{{ "/posts/" | url }}">All</a>
  </div>

  <div>
    <ul>
      <li><a href="{{ "/style/" | url }}">Style</a></li>
      <li><a href="{{ "/feed.xml" | url }}">Feed XML</a></li>
      <li><a href="{{ "/sitemap.xml" | url }}">Sitemap XML</a></li>
    </ul>
  </div>
</article>
